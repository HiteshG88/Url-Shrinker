      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
    <title>URL Shrinker</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shrinker</h1>

      <% if (locals.error) { %>
      <div class="error alert alert-danger" role="alert"> <%= error %> </div>
      <% } %>

      <form action="/" method="post">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon3"
              >https://example.com/</span
            >
          </div>
          <input
            type="text"
            class="form-control"
            id="basic-url"
            aria-describedby="basic-addon3"
            type="url"
            name="url"
            id="url"
            placeholder="long url here...."
          />
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default"
              >Custom-id</span
            >
          </div>
          <input
            type="text"
            class="form-control"
            aria-label="Default"
            aria-describedby="inputGroup-sizing-default"
            type="text"
            name="custom-id"
            placeholder="*optional"
          />
        </div>
        <em
          >Note: you can also provide your own custom-id, else we will generate
          one for you</em
        >
        <!-- <button type="submit">Generate</button> -->

        <button
          type="submit"
          class="btn btn-primary mt-4"
          data-toggle="button"
          aria-pressed="false"
          autocomplete="off"
        >
          Generate
        </button>
      </form>

      <div class="short-url mt-4">
        <% if (locals.short_url) { %>
        <div class="input-group">
          <input
            type="text"
            class="form-control"
            value="<%= short_url %>"
            placeholder="Some path"
            id="copy-input"
          />
          <a
            class="btn btn-primary"
            href="<%= short_url %>"
            role="button"
            target="_blank"
            >Link</a
          >
        </div>
        <!-- <a href="<%= short_url %>"><%= short_url %></a> -->
        <% } %>
      </div>
    </div>

    <footer>
      <span>Hitesh gupta &copy; 2022</span>
      <a
        class="github"
        target="__blank"
        href="https://github.com/HiteshG88/Url-Shrinker"
        >github</a
      >
    </footer>
  </body>
</html>
